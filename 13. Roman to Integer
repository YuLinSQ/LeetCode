class Solution {
public:
    int romanToInt(string s) {
        int count=s.length();
        int sum=0;
        int temp=0;
        int sum1;
        int sum2;
        while(count>temp)
        {
            sum2=0;
            if(s[temp]=='I')
            {
                sum1=1;
            }
            else if(s[temp]=='V')
            {
                sum1=5;
            }
            else if(s[temp]=='X')
            {
                sum1=10;
            }
            else if(s[temp]=='L')
            {
                sum1=50;
            }
            else if(s[temp]=='C')
            {
                sum1=100;
            }
            else if(s[temp]=='D')
            {
                sum1=500;
            }
            else if(s[temp]=='M')
            {
                sum1=1000;
            }
            if(count>temp+1)
            {
                if(s[temp+1]=='I')
                {
                    sum2=1;
                }
                else if(s[temp+1]=='V')
                {
                    sum2=5;
                }
                else if(s[temp+1]=='X')
                {
                    sum2=10;
                }
                else if(s[temp+1]=='L')
                {
                    sum2=50;
                }
                else if(s[temp+1]=='C')
                {
                    sum2=100;
                }
                else if(s[temp+1]=='D')
                {
                    sum2=500;
                }
                else if(s[temp+1]=='M')
                {
                    sum2=1000;
                }
            }
            if(sum2>sum1)
            {
                sum=sum+sum2-sum1;
                temp++;
            }
            else
            {
                sum=sum+sum1;
            }
            temp++;
        }
        return sum;
    }
};
