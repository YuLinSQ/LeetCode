#referenced pakilamak
class Solution(object):
    def letterCombinations(self, digits):
        """
        :type digits: str
        :rtype: List[str]
        """
        hm = {"2": "abc", "3": "def", "4":"ghi", "5":"jkl", "6":"mno", "7":"pqrs", "8":"tuv", "9":"wxyz"}
        ans = []
        if len(digits) == 0:
            return ans
        self.rec(ans, digits, "", hm)
        return ans

    def rec(self, ans, digits, string, hm):
        if len(digits) == 0:
            ans.append(string)
            return
        temp = hm[digits[0]]
        for i in temp:
            self.rec(ans, digits[1:], string+i, hm)
        
