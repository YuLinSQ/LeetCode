class Solution(object):
    def findFarmland(self, land):
        """
        :type land: List[List[int]]
        :rtype: List[List[int]]
        """
        arr = []
        visit = {}

        def dfs(i,j):
            if (i,j) in visit or i >= len(land) or j>=len(land[0]) or i<0 or j<0 or land[i][j] == 0:
                return
            visit[(i,j)] = 0
            dfs(i-1,j)
            dfs(i+1,j)
            dfs(i,j-1)
            dfs(i,j+1)
            if (i+1 >= len(land) or land[i+1][j] == 0) and (j+1 >= len(land[0]) or land[i][j+1] == 0):
                arr[-1][2] = i
                arr[-1][3] = j

        for i in range(len(land)):
            for j in range(len(land[0])):
                if (i,j) in visit or land[i][j] == 0:
                    continue
                arr.append([i,j,0,0])
                dfs(i,j)
        return arr
                
