# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def kthSmallest(self, root, k):
        """
        :type root: Optional[TreeNode]
        :type k: int
        :rtype: int
        """
        arr = []
        def check(root):
            if root == None:
                return
            if len(arr)>k:
                return
            check(root.left)
            arr.append(root.val)
            check(root.right)
        check(root)
        return arr[k-1]
