class Solution(object):
    def lengthOfLIS(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        arr = []
        if nums:
            arr.append(1)
        for i in range(1, len(nums)):
            maxi = float('-inf')
            ind = 0
            for j in range(len(arr)-1, -1, -1):
                if nums[j] < nums[i]:
                    if arr[j] > maxi:
                        maxi = arr[j]
                        ind = j
            if maxi != float('-inf'):
                arr.append(arr[ind]+1)
            else:
                arr.append(1)
        return max(arr)
