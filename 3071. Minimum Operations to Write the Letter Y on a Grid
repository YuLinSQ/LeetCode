class Solution(object):
    def minimumOperationsToWriteY(self, grid):
        """
        :type grid: List[List[int]]
        :rtype: int
        """
        y = [0,0,0]
        x = [0,0,0]
        for i in range(len(grid)//2):
            for j in range(len(grid)):
                if i == j or i == len(grid[0])-j-1:
                    y[grid[i][j]-1]+=1
                else:
                    x[grid[i][j]-1]+=1
        for i in range(len(grid)//2, len(grid)):
            for j in range(len(grid)):
                if j == len(grid[0])//2:
                    y[grid[i][j]-1]+=1
                else:
                    x[grid[i][j]-1]+=1
        ans = float("inf")
        a = len(grid[0])//2*2+len(grid[0])//2+1
        b = len(grid)*len(grid[0]) - a
        for i in range(3):
            for j in range(3):
                if i!=j:
                    ans = min(ans, a-x[i]+b-y[j])
        return ans
