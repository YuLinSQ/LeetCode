# referenced neetcode150
class Solution(object):
    def countBits(self, n):
        """
        :type n: int
        :rtype: List[int]
        """
        ans = [0]
        offset = 1
        for i in range(1, n+1):
            if offset*2 == i:
                offset = i
            ans.append(1+ans[i-offset])
        return ans
