class Solution(object):
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: int
        """
        hm = {}
        count = 0
        check = True
        for i in s:
            if i not in hm:
                hm[i] = 0
            hm[i]+=1
        for i in hm:
            if hm[i]%2 == 1:
                count += hm[i]-1
                if check:
                    count+=1
                    check = False
            else:
                count += hm[i]
        return count
