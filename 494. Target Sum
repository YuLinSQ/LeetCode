class Solution(object):
    def findTargetSumWays(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        mem = {}
        
        def dfs(i,a):
            if i == len(nums):
                if a == target:
                    return 1
                return 0
            if (i,a) in mem:
                return mem[(i,a)]
            mem[(i,a)] = dfs(i+1, a+nums[i]) + dfs(i+1, a-nums[i])
            return mem[(i,a)]

        return dfs(0,0)
