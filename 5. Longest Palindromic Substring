class Solution(object):
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: str
        """
        if len(s) == 0:
            return s
        if len(s) == 1:
            return s
        arr = [1]
        for i in range (1, len(s)):
            j = 1
            temp = 1
            while i-j>=0 and i+j<len(s):
                if s[i-j] == s[i+j]:
                    temp+=2
                else:
                    break
                j+=1
            temp2 = 0
            if s[i-1] == s[i]:
                j = 1
                temp2 = 2
                while i-j-1>=0 and i+j<len(s):
                    if s[i-j-1] == s[i+j]:
                        temp2+=2
                    else:
                        break
                    j+=1
            if temp>temp2:
                arr.append(temp)
            else:
                arr.append(temp2)
        ind = arr.index(max(arr))
        if arr[ind] %2 == 0:
            return s[ind-arr[ind]/2:ind+arr[ind]/2]
        if arr[ind] %2 == 1:
            return s[ind-arr[ind]//2:ind+arr[ind]/2+1]
