class Solution(object):
    def countSubstrings(self, s):
        """
        :type s: str
        :rtype: int
        """
        ans = 0
        for i in range(len(s)):
            ans+=1
            j = 1
            while i-j>=0 and i+j<len(s):
                if s[i-j] == s[i+j]:
                    ans+=1
                else:
                    break
                j+=1
            j = 0
            while i-j-1>=0 and i+j<len(s):
                if s[i-j-1] == s[i+j]:
                    ans+=1
                else:
                    break
                j+=1
        return ans
