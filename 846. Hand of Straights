class Solution(object):
    def isNStraightHand(self, hand, groupSize):
        """
        :type hand: List[int]
        :type groupSize: int
        :rtype: bool
        """
        if len(hand) % groupSize != 0:
            return False
        hand.sort()
        while len(hand) != 0:
            temp = hand.pop(0)
            for i in range (groupSize-1):
                if temp+1 in hand:
                    temp = hand.pop(hand.index(temp+1))
                else:
                    return False
        return True
