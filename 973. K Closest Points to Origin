# referenced neetcode 150
class Solution(object):
    def kClosest(self, points, k):
        """
        :type points: List[List[int]]
        :type k: int
        :rtype: List[List[int]]
        """
        minheap = []
        for x,y in points:
            dist = (x**2)+(y**2)
            minheap.append([dist,x,y])
        heapq.heapify(minheap)
        ans = []
        for i in range(k):
            dist, x, y = heapq.heappop(minheap)
            ans.append([x,y])
        return ans
